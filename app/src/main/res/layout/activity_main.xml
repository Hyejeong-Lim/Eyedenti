<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    //첫 번째 열
    <LinearLayout
        android:layout_width="345dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="40dp"
        android:paddingTop="30dp"
        android:paddingRight="40dp"
        android:paddingBottom="30dp">

        <ImageButton
            android:id="@+id/vrscreen"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_marginBottom="20dp"
            android:layout_weight="1" />

        <ImageButton
            android:id="@+id/information"
            android:layout_width="match_parent"
            android:layout_height="86dp"
            android:layout_marginBottom="20dp"
            android:layout_weight="1" />

        <CalendarView
            android:layout_width="match_parent"
            android:layout_height="105dp"
            android:layout_weight="1" />

    </LinearLayout>

    //2345열
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="5">

        //작은버튼 전체 레이아웃
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="30dp"
            android:layout_marginRight="30dp"
            android:layout_weight="2">

            //두 번째 열

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <ImageButton
                    android:id="@+id/open"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:layout_weight="1"
                    android:scaleType="centerCrop"
                    android:src="@drawable/btn_shape"
                    android:background="@drawable/btn_shape"/>

                <ImageButton
                    android:id="@+id/grind"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:layout_weight="1"
                    android:scaleType="centerCrop"
                    android:src="@drawable/grind"
                    android:background="@drawable/btn_shape"/>

                <ImageButton
                    android:id="@+id/windy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:layout_weight="1"
                    android:scaleType="centerCrop"
                    android:src="@drawable/windy"
                    android:background="@drawable/btn_shape"/>

            </LinearLayout>

            //세 번째 열

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <ImageButton
                    android:id="@+id/close"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:layout_weight="1"
                    android:scaleType="centerCrop"
                    android:src="@drawable/close"
                    android:background="@drawable/btn_shape"/>

                <ImageButton
                    android:id="@+id/taptap"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:layout_weight="1"
                    android:scaleType="centerCrop"
                    android:src="@drawable/taptap"
                    android:background="@drawable/btn_shape"/>

                <ImageButton
                    android:id="@+id/suction"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:layout_weight="1"
                    android:scaleType="centerCrop"
                    android:src="@drawable/suction"
                    android:background="@drawable/btn_shape"/>
            </LinearLayout>

            //네 번째 열

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <ImageButton
                    android:id="@+id/bitedown"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:layout_weight="1"
                    android:src="@drawable/bitedown"
                    android:scaleType="centerCrop"
                    android:background="@drawable/btn_shape" />

                <ImageButton
                    android:id="@+id/left"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:layout_weight="1"
                    android:src="@drawable/left"
                    android:scaleType="centerCrop"
                    android:background="@drawable/btn_shape"/>

                <ImageButton
                    android:id="@+id/anesthesia"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:layout_weight="1"
                    android:src="@drawable/anesthesia"
                    android:scaleType="centerCrop"
                    android:background="@drawable/btn_shape" />
            </LinearLayout>

            //다섯번째 열
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <ImageButton
                    android:id="@+id/rinse"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:layout_weight="1"
                    android:src="@drawable/rinse"
                    android:scaleType="centerCrop"
                    android:background="@drawable/btn_shape" />

                <ImageButton
                    android:id="@+id/right"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:layout_weight="1"
                    android:src="@drawable/right"
                    android:scaleType="centerCrop"
                    android:background="@drawable/btn_shape" />

                <ImageButton
                    android:id="@+id/handpiece"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:layout_weight="1"
                    android:src="@drawable/handpiece"
                    android:scaleType="centerCrop"
                    android:background="@drawable/btn_shape" />
            </LinearLayout>

        </LinearLayout>

        //큰 버튼 전체
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="30dp"
            android:layout_weight="3"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <ImageButton
                    android:id="@+id/lefthand"
                    android:layout_width="238dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="20dp"
                    android:layout_weight="1"
                    android:text="1"
                    android:src="@drawable/lefthand"
                    android:scaleType="centerCrop"
                    android:background="@drawable/btn_shape"/>

                <ImageButton
                    android:id="@+id/voice"
                    android:layout_width="229dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="20dp"
                    android:layout_weight="1"
                    android:text="1"
                    android:src="@drawable/voice"
                    android:scaleType="centerCrop"
                    android:background="@drawable/btn_shape"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <ImageButton
                    android:id="@+id/laydown"
                    android:layout_width="238dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:text="1"
                    android:src="@drawable/laydown"
                    android:scaleType="centerCrop"
                    android:background="@drawable/btn_shape"/>

                <ImageButton
                    android:id="@+id/raise"
                    android:layout_width="229dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:text="1"
                    android:src="@drawable/raise"
                    android:scaleType="centerCrop"
                    android:background="@drawable/btn_shape"/>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>